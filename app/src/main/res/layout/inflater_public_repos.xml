<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.kaiser.gitpublicrepodemo.data.model.PublicRepoModel" />
    </data>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    app:contentPadding="10dp"
    android:elevation="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/purple_500"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.name}"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="Repo Name"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Repo Url"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="@{model.html_url}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{model.description}"
            tools:text="Repo Description"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:visibility="@{model.description==null?View.GONE:View.VISIBLE}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@{model.size}"
                android:textSize="24sp"
                tools:text="20" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Size" />

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/listDivider"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@{model.forks}"
                tools:text="10" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Forks"/>

            <View
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@{model.watchers}"
                android:textSize="24sp"
                tools:text="20" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Watchers"/>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</layout>